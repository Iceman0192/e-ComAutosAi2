{
  "include": ["client/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    // Compilation Options
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",  // CRITICAL: Changed from "preserve" to "react-jsx"
    
    // Module Resolution
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    
    // Emit Options
    "noEmit": true,
    "skipLibCheck": true,
    "incremental": true,
    
    // Path Mappings
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"],
      "@assets/*": ["./attached_assets/*"]
    },
    
    // Type Roots
    "types": ["node", "vite/client"],
    "typeRoots": ["./node_modules/@types", "./client/src/types"]
  }
}
